{
  "variables": {
      "debian_iso_url": "",
      "debian_iso_checksum": ""
  },
  "builders": [
    {

      "vm_name": "ai-debian71",
      "type": "virtualbox",
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "headless": true,
      "iso_url": "{{user `debian_iso_url`}}",
      "iso_checksum": "{{user `debian_iso_checksum`}}",
      "iso_checksum_type": "sha256",
      "ssh_username": "packer",
      "ssh_password": "packer",
      "boot_command": [
        "<esc><wait>",
        "install",
        " auto",
        " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " debian-installer=en_US",
        " locale=en_US",
        " keymap=us",
        " netcfg/get_hostname=vagrant",
        " netcfg/get_domain=vm ",
        "<enter>"
      ],
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'packer'|sudo -S shutdown -h now",
      "disk_size": 10140,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"]
      ]
    }
  ],
  "provisioners": [{
    "type": "shell",
    "scripts": [
      "script/base.sh",
      "script/vagrant.sh",
      "script/vmtools.sh",
      "script/cleanup.sh",
      "script/zerodisk.sh"
    ],
    "override": {
      "virtualbox": {
        "execute_command": "echo 'packer'|sudo -S sh '{{.Path}}'"
      }
    }
  }],
  "post-processors": [{
    "type": "vagrant",
    "keep_input_artifact": true,
    "output": "../../{{.Provider}}/ai-debian71.box"
  }]
}
