        " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " debian-installer=en_US",
        " locale=en_US",
        " keymap=us",
        " netcfg/get_hostname=vagrant",
        " netcfg/get_domain=vm ",
        "<enter>"
      ],
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'packer'|sudo -S shutdown -h now",
      "disk_size": 10140,
      "vmx_data": {
        "memsize": "512",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    },
    {
      "vm_name": "ai-debian71",
      "type": "virtualbox",
      "guest_os_type": "Debian_64",
      "http_directory": "http",
      "iso_url": "http://cdimage.debian.org/debian-cd/7.1.0/amd64/iso-cd/debian-7.1.0-amd64-netinst.iso",
      "iso_checksum": "62232b8adc281c04f9985e4a1541481a468b3b2ca1702a0dd7f62fcf56ef101b",
      "iso_checksum_type": "sha256",
      "ssh_username": "packer",
      "ssh_password": "packer",
      "boot_command": [
        "<esc><wait>",
        "install",
        " auto",
        " url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg",
        " debian-installer=en_US",
        " locale=en_US",
        " keymap=us",
        " netcfg/get_hostname=vagrant",
        " netcfg/get_domain=vm ",
        "<enter>"
      ],
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "echo 'packer'|sudo -S shutdown -h now",
      "disk_size": 10140,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"]
      ]
    }
  ],
  "provisioners": [{
    "type": "shell",
